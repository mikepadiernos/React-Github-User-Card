// FOLLOWER

main
	&#main-content
		&.main-content
			display flex
			justify-content center
			ul
				&.list-followers
					display grid
					grid-gap 0.25rem
					grid-template-columns repeat(3, 1fr)
					list-style none
					padding 0
					li
						&.card
							width 100%
							article
								&.card-follower
									border 4px solid #e8e8e8
									display flex
									flex-flow column wrap
									padding 0.25rem
								header
									h3
										font-size 1.25rem
								.card-avatar
									order -1
									img
										width 298px
										height auto