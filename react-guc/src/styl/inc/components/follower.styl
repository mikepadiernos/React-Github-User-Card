// FOLLOWER

main
	&#main-content
		&.main-content
			display flex
			justify-content center
			ul
				&.list-followers
					display grid
					grid-gap 0.25rem
					grid-template-columns repeat(3, 1fr)
					list-style none
					padding 0
					li
						&.card
							width 100%
							article
								&.card-follower
									background-color #ffffff
									box-shadow 0 12.1px 10px rgba(0, 0, 0, 0.065),
									0 97px 80px rgba(0, 0, 0, 0.07)
									display flex
									flex-flow column wrap
									padding 0.25rem
									position relative
								header
									background-color #0074D9
									justify-content flex-start
									padding 0.5rem 1rem
									h3
										color #fff
										font-size 1.25rem
										line-height 1
								.card-avatar
									display flex
									margin-bottom 0.25rem
									order -1
									img
										width 307px
										height auto
								.card-links
									background-color #000000
									border-radius 50%
									bottom 10%
									box-shadow 0 12.1px 10px rgba(0, 0, 0, 0.065),
									0 97px 80px rgba(0, 0, 0, 0.07)
									position absolute
									right 5%
									a
										display block
										height 48px
										overflow hidden
										width 48px
										i
											display flex
											justify-content center
											&:before
												color #ffffff
											&.fa
												font-size 48px