// INPUT: SEARCH

input[type=text]
	background-color #fff9f9
	border 4px solid #fff9f9
	border-radius 0
	box-shadow 0 12.1px 10px rgba(0, 0, 0, 0.065),
	0 97px 80px rgba(0, 0, 0, 0.07)
	box-sizing border-box
	color #000000
	font-size 1.25rem
	line-height 1.15
	margin-bottom 0.5rem
	outline 0
	padding 1rem 0.5rem
	text-transform uppercase
	width 100%
	&::placeholder
		color #c9c9c9
	&:focus
		background-color #fff
		border-color green
		color #777777
		&::placeholder
			color white
	//@media screen and (min-width 1001px)
	//	width auto

+above(970px)
	input[type=text]
		padding 0.5rem