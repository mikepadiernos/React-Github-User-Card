// FOLLOWER

main
	&#main-content
		&.main-content
			.followers-container
				display flex
				justify-content center
				width 100%
				ul
					&.list-followers
						display grid
						grid-gap 0.25rem
						//grid-template-columns repeat(33%, 1fr)
						grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
						list-style none
						padding 0
						width 100%
						li
							&.card
								width 100%
								article
									&.card-follower
										background-color #ffffff
										box-shadow 0 12.1px 10px rgba(0, 0, 0, 0.065),
										0 97px 80px rgba(0, 0, 0, 0.07)
										display flex
										flex-flow column wrap
										padding 0.25rem
										position relative
									header
										border-top 4px solid #c9c9c9
										justify-content flex-start
										padding 0.5rem
										h3
											color #000000
											font-size 1.25rem
											line-height 1
											margin-bottom 0
									.card-avatar
										display flex
										margin-bottom 4px
										order -1
										img
											width 310px
											height auto
									.card-links
										background-color #0074D9
										border-radius 50%
										bottom 10%
										box-shadow 0 12.1px 10px rgba(0, 0, 0, 0.065),
										0 97px 80px rgba(0, 0, 0, 0.07)
										position absolute
										right 5%
										a
											display block
											height 48px
											overflow hidden
											width 48px
											text-decoration none
											i
												align-items center
												display flex
												justify-content center
												&:before
													color #ffffff
												&.fa
													font-size 36px
													height 48px

+between('m', 'l')
	main
		&#main-content
			&.main-content
				.followers-container
					ul
						&.list-followers
							//grid-template-columns repeat(2, 1fr)
							li
								&.card
									article
										.card-avatar
											img
												width 390px

+above(l)
	main
		&#main-content
			&.main-content
				.followers-container
					ul
						&.list-followers
							//grid-template-columns repeat(3, 1fr)
							//grid-template-columns: repeat(auto-fit, minmax(16rem, 1fr));
							li
								&.card
									article
										.card-avatar
											img
												width 310px
										.card-links
											bottom 10%
											right 5%