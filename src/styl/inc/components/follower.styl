// FOLLOWER

main
	&#main-content
		&.main-content
			.followers-container
				display flex
				justify-content center
				width 100%
				ul
					&.list-followers
						display grid
						grid-gap 0.25rem
						//grid-template-columns repeat(33%, 1fr)
						grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
						list-style none
						padding 0
						width 100%
						li
							&.card
								width 100%
								article
									&.card-follower
										background-color #ffffff
										box-shadow 0 12.1px 10px rgba(0, 0, 0, 0.065),
										0 97px 80px rgba(0, 0, 0, 0.07)
										display flex
										flex-flow column wrap
										padding 0.25rem
										position relative
									header
										align-items flex-start
										background-color #0074D9
										//border-top 4px solid #c9c9c9
										justify-content flex-start
										h3
											color #000000
											font-size 2rem
											line-height 1
											margin-bottom 0
											width 100%
											a
												color white
												display block
												padding 1.5rem
												text-decoration none
												&:hover
													background-color #1c95ff
												i
													margin-right 10px
									.card-avatar
										display flex
										height auto
										margin-bottom 4px
										order -1
										overflow hidden
										position relative
										width 100%
										&:after
											content ""
											display block
											padding-bottom 100%
										img
											width 100%
											height 100%
											position absolute
									.card-links
										background-color #0074D9
										border-radius 50%
										bottom 3.7rem
										box-shadow 0 12.1px 10px rgba(0, 0, 0, 0.065),
										0 97px 80px rgba(0, 0, 0, 0.07)
										position absolute
										right 4px
										top auto
										&:hover
											background-color #1c95ff
										a
											display block
											height 55px
											overflow hidden
											width 55px
											text-decoration none
											i
												align-items center
												display flex
												justify-content center
												&:before
													color #ffffff
												&.fa
													font-size 22px
													height 55px

