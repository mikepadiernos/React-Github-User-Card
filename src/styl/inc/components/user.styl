// USER

header
	align-items center
	display flex
	justify-content center
	&.banner-container
		padding 0 0 4rem
	section
		&.avatar-container
			display flex
			height auto
			overflow hidden
			position relative
			width 100%
			&:after
				content ""
				display block
				padding-bottom 100%
			img
				&.image-avatar
					height auto
					position absolute
					width 100%
		&.user-demographics
			display flex
			flex-flow column wrap
			justify-content space-between
			padding 0
			position relative
			width 100%
			header
				align-items flex-start
				border-bottom 4px solid #e9e9e9
				display flex
				flex-flow column wrap
				//height 30%
				justify-content flex-start
				padding 1rem
				.user-name,
				.user-login
					display block
				.user-name
					h1
						font-size 3.5rem
						font-weight bold
						margin-bottom 0
				.user-login
					h2
						font-size 1.5rem
						margin-top 0
			.user-biography
				//height 30%
				//margin-top 1.25rem
				padding 2rem 1rem 2.4rem
				.bio
					display block
					font-size 2rem
			.user-links
				display flex
				position absolute
				right 0
				top 8px
				a
					background-color #c9c9c9
					color #fff
					font-family font-default-sans-serif, font-family-san-serif
					font-size 16px
					margin-left 0.25rem
					padding 6px 12px
					text-decoration none
					&.link-blog
						background-color #FF851B
					&.link-github
						background-color #000000
					i
						&.fa
							margin-right 0.25rem
							&:before
								font-size 18px
			.user-stats
				display flex
				justify-content space-between
				.stats-container
					background-color #c9c9c9
					color #fff
					display flex
					flex-flow column wrap
					height 125px
					justify-content center
					text-align center
					width 33%
					&:hover
						background-color #8c8a8a
					.stats
						display block
						height auto
						&.stats-text
							font-size 3rem
							height 3rem
							line-height 1
								
